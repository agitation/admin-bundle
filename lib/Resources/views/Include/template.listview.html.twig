<template id="agitadmin-listview">

    <div class="listview-header title container">
        <div class="control show-nav only-handheld">
            <a class="fa fa-navicon"></a>
        </div>
        <h1><span></span> › {{ t("Overview") }}</h1>
        <div class="actions control"></div>
    </div>

    <div class="action create">
        <a class="fa fa-pencil only-handheld" href="#!/edit?new" title="{{ t("create new") }}"></a>
        <a class="btn btn-primary not-handheld" href="#!/edit?new">{{ t("create new") }}</a>
    </div>

    <form class="action goto form-inline">
        <div class="input-group not-handheld">
            <input class="form-control" type="text" name="id" value="" placeholder="{{ t("ID") }}">
            <span class="input-group-btn">
                <button class="btn btn-default">{{ t("edit") }}</button>
            </span>
        </div>
    </form>

    <div class="more container">
        <span class="ind"></span>
        <span>{{ t("loading more items …") }}</span>
    </div>

    <form class="listview-search container">
        <table>
            <tr class="captions">
                <th></th>
                <td class="actions"></td>
            </tr>
            <tr class="fields">
                <th>{{ t("Search") }}</th>

                <td class="actions">
                    <button type="submit" class="btn btn-info">{{ t("Update list") }}</button>
                    <a>{{ t("Reset parameters") }}</a>
                </td>
            </tr>
        </table>
    </form>

    <div class="listview-table container">
        <div class="extra">
            <div class="exporter"></div>
        </div>

        <table>
            <thead><tr></tr></thead>
            <tbody>
                <tr>
                    <td></td>
                    <td class="actions"></td>
                </tr>
                <tr class="noresults">
                    <td>{{ t("This list is currently empty. Please modify your search or create a new object.") }}</td>
                </tr>
            </tbody>
            <tfoot><tr></tr></tfoot>
        </table>
    </div>

    <table class="dummy"><tr>
        <td class="caption">
            <label></label>
        </td>
    </tr></table>
</template>
